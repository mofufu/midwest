<%- model_class = Companyform -%>
<div class="page-header">
  <h1><%=t '.title', :default => Companyform %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @companyform.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:attachment) %></dt>
      <dd><pre class="prettyprint"><%= @companyform.attachment %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              companyforms_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_companyform_path(@companyform), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              companyform_path(@companyform),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

